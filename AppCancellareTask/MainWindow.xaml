        <Button x:Name="btnStopConParametro" Content="Stop" HorizontalAlignment="Left" Margin="266,288,0,0" VerticalAlignment="Top" Click="btnStop_Click"/>
        <Button x:Name="btnStopSenzaParametro" Content="Stop" HorizontalAlignment="Left" Margin="495,288,0,0" VerticalAlignment="Top" Click="btnStop_Click"/>


    </Grid>
